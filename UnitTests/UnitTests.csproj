<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <RootNamespace>XstarS</RootNamespace>
    <AssemblyName>XstarS.UnitTests</AssemblyName>
    <TargetFrameworks>net461;net472;netcoreapp2.1;netcoreapp3.0</TargetFrameworks>
    <LangVersion>latest</LangVersion>
    <IsPackable>false</IsPackable>
    <Authors>XstarS</Authors>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)'=='Debug'">
    <DebugType>full</DebugType>
    <DebugSymbols>true</DebugSymbols>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)'=='Release'">
    <DebugType>none</DebugType>
    <DebugSymbols>false</DebugSymbols>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="16.3.0" />
    <PackageReference Include="MSTest.TestAdapter" Version="2.0.0" />
    <PackageReference Include="MSTest.TestFramework" Version="2.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\XstarS.Collections\XstarS.Collections.csproj" />
    <ProjectReference Include="..\XstarS.Deconstructable\XstarS.Deconstructable.csproj" />
    <ProjectReference Include="..\XstarS.DynamicProxy\XstarS.DynamicProxy.csproj" />
    <ProjectReference Include="..\XstarS.ObjectModel\XstarS.ObjectModel.csproj" />
    <ProjectReference Include="..\XstarS.ParamReaders\XstarS.ParamReaders.csproj" />
    <ProjectReference Include="..\XstarS.ValueValidate\XstarS.ValueValidate.csproj" />
    <ProjectReference Include="..\XstarS\XstarS.csproj" />
  </ItemGroup>

</Project>
